<div class="text-center" data-controller="update-description">
  <div class="description-card">
    <h2>About me
    <div data-update-description-target="pencil" data-action="click->update-description#open">
	    <%= link_to icon('fa-solid', 'pencil'), class: 'open-form' %>
    </div>
    </h2>
      <p data-update-description-target="description"><%= @my_profile.description %></p>
    <div class="form-popup d-none" data-update-description-target="form" data-action="submit->update-description#update">
			<div class="container form-wrapper">
				<button class="btn close-form" data-update-description-target="close" data-action="click->update-description#close">X</button>
				<form id="my-form" novalidate="novalidate">
          <div class="row">
            <div class="form-group col-md-12">

							<textarea name="something" class="form-control" data-update-description-target="input"></textarea>
						</div>
          </div>
					<button type="submit" class="btn send-form">Update</button>
				</form>
			</div>
		</div>
  </div>

  <div class="interest-card">
    <h2>My interests</h2>
    <div class="grid">
      <% @my_profile.tags.each do |tag| %>
        <div class="tag">
          <p><%= tag %></p>
        </div>
      <% end %>
    </div>
    <%# <%= link_to 'Update', edit_my_profile_path, class: "btn btn-flat" %>
  </div>

  <div class="shows-block">
    <h2>My favourite shows</h2>
    <% @my_events.first(2).each do |event| %>
    <div class="ticket-card">
      <%= image_tag event.picture_url %>
      <div class="ticket-card-infos">
        <h3><%= event.title %></h3>
        <% if event.title != event.artist %>
          <p><%= event.artist %></p>
        <% end %>
        <p><%= event.date %></p>
      </div>
    </div>
    <% end %>
    <%# <%= link_to 'Update', edit_my_profile_path, class: "btn btn-flat" %>
  </div>
</div>
