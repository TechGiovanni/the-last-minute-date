    <div class="home-btn-category">

      <div class="home-btn-category btn"
          data-refresh-markers-target="categories"
          data-action="click->refresh-markers#update">
        <a class="category-link" href="#">Music</a>
      </div>

      <div class="home-btn-category btn"
          data-refresh-markers-target="categories"
          data-action="click->refresh-markers#update">
        <a class="category-link" href="#">Art & Theater</a>
      </div>

      <div class="home-btn-category btn"
          data-refresh-markers-target="categories"
          data-action="click->refresh-markers#update">
        <a class="category-link" href="#">Sport</a>
      </div>
    </div>

    <%= render "shared/map" %>
  </div>

</div>
