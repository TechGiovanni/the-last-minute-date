<div class="header-home" data-controller="refresh-markers">

  <div class="title-home">
    <h1>Choose an event near you and find a buddy </h1>
  </div>

  <div class="p-home">
    <p>No more saturday night <strong>alone</strong>. With last minute date, <strong>choose</strong> a show and <strong>find a buddy</strong> to go with you. </p>
  </div>

  <button type="button" class="form-control-search" data-bs-toggle="modal" data-bs-target="#modal" data-bs-whatever="@getbootstrap">Pick a city and a date</button>

  <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true" data-refresh-markers-target="modal">
    <div class="modal-dialog">
      <div class="modal-content" data-refresh-markers-target="form">

          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          <h1 class="modal-title fs-5" id="exampleModalLabel">Where and when would you like to see a show?</h1>

        <%= form_with url: root_path, method: :get, class: "modal-form" do %>
          <%= submit_tag "Search", class: 'search-btn'%>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control-search",
            placeholder: "Enter a location"
          %>
          <%= date_field :date,
            params[:date],
            class: "form-control-search",
            placeholder: "Enter a date"
          %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="home-btn-category">
  
      <div>
        <button class="home-btn-category b-home" id="music"
        data-action="click->refresh-markers#passIdToMapController">
        Music</button>
      </div>

      <div>
        <button class="home-btn-category b-home" id="art"
        data-action="click->refresh-markers#passIdToMapController">
        Art & Theater</button>
      </div>

      <div>
        <button class="home-btn-category b-home" id="sport"
        data-action="click->refresh-markers#passIdToMapController">
        Sport</button>
      </div>

  </div>

  <%= render "shared/map" %>

</div>
