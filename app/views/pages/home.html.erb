<div class="header-home">

  <div class="title-home">
    <h1>Choose an event near you and find a buddy </h1>
  </div>

  <div class="p-home">
    <p>No more saturday night <strong>alone</strong>. With last minute date, <strong>choose</strong> a show and <strong>find a buddy</strong> to go with you. </p>
  </div>

  <div data-controller="refresh-markers">
    <%= form_with url: root_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a show"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>

    <div class="home-btn-category">

      <div class="home-btn-category btn"
          data-action="click->refresh-markers#passIdToMapController">
        <a class="category-link" href="#" id="music">Music</a>
      </div>

      <div class="home-btn-category btn"
          data-action="click->refresh-markers#passIdToMapController">
        <a class="category-link" href="#" id="art">Art & Theater</a>
      </div>

      <div class="home-btn-category btn"
          data-action="click->refresh-markers#passIdToMapController">
        <a class="category-link" href="#" id="sport">Sport</a>
      </div>

    </div>

    <%= render "shared/map" %>
  </div>

</div>
