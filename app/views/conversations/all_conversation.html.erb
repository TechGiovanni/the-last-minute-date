<div class="text-center">
  <div class="description-card-new">
    <h1>Discussions</h1>
    <p></p>
     <div class="back_conversation_show">
        <a href="/"><%= icon('fa-solid', 'arrow-left-long')%></a>
      </div>
  </div>
</div>


<div class="shows-block-new ">

  <% @conversations.map do |conversation| %>
    <div class="ticket-card-new">

      <a href="/conversations/<%= conversation.id %>"><p><%= conversation.name.capitalize %></p></a>

      <a href="/conversations/<%= conversation.id %>"><p><%= image_tag conversation.messages.user.sender.picture_url %></p></a>

    </div>
  <% end %>

</div>
