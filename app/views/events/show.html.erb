<div class="event-page">
  <div class="events-picture">
    <%= image_tag @event.picture_url %>
  </div>

  <br>

  <div class="events-header">
    <h1><%= @event.title %></h1>
    <p><%= @event.date %></p>
  </div>

  <div class="events-body">
    <h2>Date</h2>
    <p><%= @event.date %><br>

    <h2>Address</h2>
    <p><%= @event.address %><br>

    <h2>Description</h2>
  </div>

  <div class="event-people-btn">
    <div class="people-btn">
      <a class="nav-link-people" href="#"> See who's going</a>
    </div>
  </div>
</div>


<div class="event-banner-price">
  <div class="event-price">
    <p><%= @event.price %>$</p>
  </div>

  <div class="buy-btn">
    <%= link_to "Buy a ticket", buy_ticket_path(@event), class:"nav-link-buy" %>
  </div>
</div>
